
<h2 class="text-center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @article.user %>
  <ul class="listing">
    <div class="row text-center">
      <div class="col-md-4 col-md-offset-4">
        <li>Created by:</li>
        <li><%= link_to gravatar_for(@article.user), user_path(@article.user)  %></li>
        <li class="article-title">
          <%= link_to @article.user.username, user_path(@article.user) %>
        </li>
        <li>
          <small>
            <%= pluralize(@article.user.articles.count, "article") %>
          </small>
        </li>
      </div>
    </div>
  </ul>
  <% end %>
  <h4 class="text-center">Description: </h4>
  <hr>
  <%= simple_format(@article.description) %>
  <div class="article-actions">
    <%= link_to "Edit Article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete Article", article_path(@article), method: :delete, data: { confirm: "Do you want to delete?" }, class: "btn btn-xs btn-danger" %>
    <%= link_to "View all articles", articles_path, class: "btn btn-xs btn-info" %>
  </div>
</div>

